{ 
  "manifest_version":2,
  "name": "U7自动登录",
  "version": "1.0",
  "description": "U7tools附属 chrome浏览器插件",
  "icons": { 
    "16": "icon/tools_16.png",             
    "48": "icon/tools_48.png",            
    "128": "icon/tools_128.png" 
  },  
  "background":{
     "scripts":["bg.js"]
  },
  "browser_action": {
  	  "default_icon":"favicon.png",
  	  "default_title":"U7自动登录账号管理",
      "default_popup": "index.html"
  },
  "permissions":[
   "webNavigation",
    "tabs", "http://*/*"
  ]
}
